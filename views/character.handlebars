<html>
<h3>Add new character:</h3>
<form id="addperson" action="/character" method="post">
    First name: <input type="text" name="fname"><br>
    Last name: <input type="text" name="lname"><br>
    Role: <select name="role_id"> 
        {{#each all_role_ids}}
        <option value="{{role_id}}">{{role_id}}</option>
        {{/each}}
    </select><br>
    DOB: <input type="number" name="dob"><br>
    HouseID: <select name="house_id" input type="number">
         {{#each all_house_ids}}
         <option value="{{character.house_id}}">{{house_id}}</option>
         {{/each}} 
   </select><br>
    <input type="submit" value="Submit">
 </form>
<br/>


<form id='search_character' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search character by any name starting with:</label>
    <input id='name_search_string' type='text' name='name_search_string' value=''>
    <input type="button" value="Search" onclick="searchCharacterByName()">
</form>



<h3>Current character:</h3>
<table>
    <thead> 
        <th>ID</th> 
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Role</th>
        <th>dob</th> 
       <th>House ID</th> 
    </thead> 
    <tbody> 
        {{#each character}} 
        <tr>
            <td>{{id}}</td> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{role_id}}</td>
            <td>{{dob}}</td> 
            <td>{{house_id}}</td>
            <td><button onclick="deleteCharacter({{id}})">Delete</button></td>
            <td><a href="/character/{{id}}">Update</a></td>
            <td><a href="/items/info/{{id}}">Show character's Items</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
