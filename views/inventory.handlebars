<h3> List of Characters with the items they own </h3>
<table>
    <thead> 
      <th>ID</th>
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Item ID</th>
       <th> Item Name</th>
       <th> Amount of</th>
       <th> Description </th>
    </thead> 
    <tbody> 
        {{#each itemOwners}} 
        <tr> 
            <td>{{id}}</td> 
            <td>{{fname}}</td>
            <td>{{lname}}</td>
            <td>{{item_id}}</td>
            <td>{{name}}</td>
            <td>{{amount_of}}</td>
            <td>{{description}}</td>
            <td><button
            onclick="deleteCharacter({{character_id}},{{item_id}},{{amount_of}})">Delete</button></td>
            <td><a href='#' onclick='javascript: alert("You can implement it just like the Add form.")'>Update</a></td>
        </tr>
        {{else}}
        <b> No characters with any items were found! Give them some by using menu above. </b>
        {{/each}} 

    </tbody>
</table> 
